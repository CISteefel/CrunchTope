debye-huckel         true
lag_activity         true
database             datacom_bench_with_surf_complexes.dbs
database_sweep       false
correction_max       2.0
gimrt                true
master_variable      Tracer
speciate_only        false
screen_output        1000
Duan                 false
hindmarsh            false
