TITLE
ShortCourse3.in: Tracer test involving diffusion
END
 
RUNTIME
time_units         days
timestep_max       0.01
timestep_init      0.01
time_tolerance     0.1
hindmarsh          true
correction_max     2.0
debye-huckel       true
database_sweep     no
speciate_only      false
gimrt              true
graphics           kaleidagraph
solver             gmres
preconditioner     ilu
precondition_level 0
database           datacom.dbs
screen_output      100
END
 
OUTPUT
time_units           days
spatial_profile      2  4  7.2  8  9

time_series          TracerDiffusion3.out  251
time_series_print    Tracer
time_series_interval 1
END

TRANSPORT
distance_units centimeters
time_units  second
fix_diffusion  1.E-05
dispersivity   0.0
END

BOUNDARY_CONDITIONS
!!!x_begin   initial           flux
!!!x_end     initial           flux
x_begin   spike2           Dirichlet           
x_end     initial           Dirichlet

END

INITIAL_CONDITIONS
initial   1-501
spike  251-251
END

Condition spike
units            mol/kg
temperature      25.0
Tracer           0.1
END

Condition spike2
units            mol/kg
temperature      25.0
Tracer           0.001
END

Condition initial
units            mol/kg
temperature      25.0
Tracer           0.00001
END
 
FLOW
time_units       years
distance_units   meters
constant_flow    0.0
END
 
POROSITY
fix_porosity     1.0
END
 
PRIMARY_SPECIES
Tracer
END
 
DISCRETIZATION
xzones 501 0.0002
END
 
