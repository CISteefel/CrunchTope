TITLE
Batch simulation of calcium isotope exchange--Oelkers Experiment 2
END

RUNTIME
time_units              hours
timestep_max            0.01
timestep_init           1.E-10
time_tolerance          0.001
hindmarsh               true
correction_max          2.0
debye-huckel            true
database_sweep          false
speciate_only           false
graphics                kaleidagraph
master                  H+
database                OldRifleDatabaseLiLi.dbs
gimrt                   true
screen_output           10000
duan                    true
!!!JennyDruhan             true
!!!SetSurfaceAreaConstant  true
END

OUTPUT
time_units  hours
spatial_profile       193
time_series_interval  1

time_series           OelkersExperiment2.out      1  1  1
time_series_print     Ca++     Ca44++    pH
time_series_units     mol/kgw  mol/kgw   mol/kgw   N.A.



END

MINERALS
CalciteRifle         -label  default -rate  -6.5
Calcite44Rifle       -label  default -rate  -6.5
!!!  2 per mil kinetic fractionation
!!!Calcite44Rifle       -label  default -rate  -4.10217692
END

ISOTOPES
primary    Ca44++          Ca++          0.02120949
mineral    Calcite44Rifle  CalciteRifle  bulk 
isotope_time_series        OelkersExperiment2-Topes.out      1  1  1
END

condition   initial
units            mmol/kg            
temperature      25.0         
H+               charge    
Ca++             0.01   
Ca44++           2.12147E-04     
CO2(aq)           CO2(g)   1.0
Na+              10.0
Cl-              10.0
! Mineral name <volume fraction m3/m3>
CalciteRifle             0.000749107  ssa 0.25
Calcite44Rifle           1.58921E-05  ssa 0.25
END

INITIAL_CONDITIONS
initial   1-1
END                                                                                                

DISCRETIZATION
distance_units      meters
xzones              1  0.001
END

BOUNDARY_CONDITIONS
x_begin   amendment                 flux
x_end     initial                   flux
END 

POROSITY
fix_porosity 0.99
END

PRIMARY_SPECIES
H+
Ca++
Ca44++
CO2(aq)
Na+
Cl-
END

SECONDARY_SPECIES
OH-
HCO3-
CO3--
CaHCO3+
Ca44HCO3+
END

GASES
CO2(g)
END

TEMPERATURE
set_temperature  25.0
END

FLOW
distance_units      centimeters
time_units          days
constant_flow       0.00
END
