TITLE
SLAC Diffusion
END

RUNTIME
time_units         days
timestep_max       0.001
timestep_init      0.000001
time_tolerance     0.001
graphics           tecplot
database           datacom.dbs
master             Br-
gimrt              true
screen_output      1000
END

OUTPUT
time_units           days
spatial_profile      26
time_series        breakthrough.out     102  1   1
time_series_print  Br-
END

TRANSPORT
distance_units   meters
time_units       seconds
fix_diffusion    1.33E-09
dispersivity     0.00
!!!constant_tortuosity 0.34
END

PRIMARY_SPECIES
Na+
Br-
END

BOUNDARY_CONDITIONS
x_begin   initial            Dirichlet
x_end     initial            flux
END

INITIAL_CONDITIONS
reservoir1  1-1
initial     2-101
reservoir2  102-102
END

Condition reservoir1
units            mol/kg
temperature      25.0
set_porosity     394905.2484
Na+              1
Br-              1
END

Condition reservoir2
units            mol/kg
temperature      25.0
set_porosity     394905.2484
Na+              0
Br-              0
END

Condition initial
units            mol/kg
temperature      25.0
set_porosity     0.15
Na+              0.0
Br-              0.0
END

FLOW
time_units       seconds
distance_units   meters
constant_flow    0.0  0.0
END

POROSITY
fix_porosity     0.15
END

DISCRETIZATION
distance_units   cm
xzones 102 0.001 
END