TITLE
Calcite precipitation and isotopic exchange in a flow field
END

RUNTIME
time_units              days
timestep_max            0.01
timestep_init           1.E-10
time_tolerance          0.001
hindmarsh               true
correction_max          2.0
debye-huckel            true
database_sweep          false
speciate_only           false
graphics                kaleidagraph
master                  H+
database                OldRifleDatabaseLiLi.dbs
gimrt                   true
screen_output           100
END

OUTPUT
time_units  days
spatial_profile       80.0
time_series           isotope_flow.out      100  1  1
time_series_print     Tracer HCO3-   Ca++     Ca44++    pH
time_series_units     mol/kgw  mol/kgw   mol/kgw   N.A.
time_series_interval  1
END

MINERALS
CalciteRifle         -label  default -rate  -4.1
!!!  2 per mil kinetic fractionation
Calcite44Rifle       -label  default -rate  -4.10217692
END

ISOTOPES
primary    Ca44++          Ca++          0.021667
mineral    Calcite44Rifle  CalciteRifle  bulk 
END

condition   amendment
units            mmol/kg             
temperature      25.0         
H+               0.11544    
Ca++             5.0  
Ca44++           0.108335     
HCO3-            10.0
Tracer           0.1
! Mineral name <volume fraction m3/m3>
CalciteRifle             0  bulk_surface_area 1.333E-02
Calcite44Rifle           0  bulk_surface_area 1.333E-02
END

condition   initial
units            mmol/kg             
temperature      25.0         
H+               0.11544    
Ca++             0.11   
Ca44++           0.00238337 
HCO3-            1.0
Tracer           1.0E-08
! Mineral name <volume fraction m3/m3>
CalciteRifle             0.001       bulk_surface_area 1.333E-02
Calcite44Rifle          0.000021667  bulk_surface_area 1.333E-02
END

TRANSPORT
distance_units  meters
time_units      seconds
fix_diffusion   1.000e-09

D_25  H+        9.312e-09
D_25  Ca++       7.50E-10
D_25  Ca44++     7.46E-10
D_25  HCO3-     2.032E-09
D_25  OH-       5.26e-09
END

INITIAL_CONDITIONS
initial   1-100
END      

BOUNDARY_CONDITIONS
x_begin  amendment
x_end  initial
END                                                                                           

DISCRETIZATION
distance_units      centimeters
xzones              100  1.0
END

POROSITY
fix_porosity 0.60
END

PRIMARY_SPECIES
H+
Ca++
Ca44++
HCO3-
Tracer
END

SECONDARY_SPECIES
OH-
CO2(aq)
CO3--
CaHCO3+
Ca44HCO3+
END

TEMPERATURE
set_temperature  25.0
END

FLOW
distance_units   centimeters
time_units       second
calculate_flow   false
constant_flow    0.00 0.0
END
