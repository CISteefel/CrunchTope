TITLE
Template for streamtubes
END
 
RUNTIME
time_units       years
timestep_max     100.0
timestep_init    1.0
time_tolerance   0.1
hindmarsh        true
correction_max   2.0
debye-huckel     true
database_sweep   no
speciate_only    false
gimrt            true
graphics         tecplot
database         datacom.dbs
screen_output    100
END
 
OUTPUT
time_units           years
spatial_profile      10000 50000 250000    
time_series          TracerReact6.out 100 1 1
time_series_print    Tracer
time_series_units    Mol/kgw
time_series_interval 1
END

MINERALS
Quartz   -label   default  -rate -9.5   
END

TRANSPORT
distance_units meters
time_units  years
fix_diffusion  0.0
dispersivity   0.0
END

BOUNDARY_CONDITIONS
x_begin   boundary          flux
x_end     initial           flux
END

INITIAL_CONDITIONS
initial 1-100
END

Condition river1
units            mol/kg
temperature      25.0
set_porosity     0.99
Tracer           0.1
SiO2(aq)         1.0e-6
Quartz           0.60     bulk_surface_area  100
END

Condition river2
units            mol/kg
temperature      25.0
set_porosity     0.99
Tracer           0.1
SiO2(aq)         1.0e-6
Quartz           0.60     bulk_surface_area  100
END

Condition granite
units            mol/kg
temperature      25.0
Tracer           0.0001
set_porosity     0.20
SiO2(aq)         Quartz
Quartz           0.60      bulk_surface_area  100
END
 
Condition shale
units            mol/kg
temperature      25.0
Tracer           0.0001
set_porosity     0.20
SiO2(aq)         Quartz
Quartz           0.60      bulk_surface_area  100
END

Condition carbonate
units            mol/kg
temperature      25.0
Tracer           0.0001
set_porosity     0.20
SiO2(aq)         Quartz
Quartz           0.60      bulk_surface_area  100
END


FLOW
time_units       years
distance_units   meters
constant_flow    10.0
END
 
POROSITY
fix_porosity     0.20
END
 
PRIMARY_SPECIES
Tracer
SiO2(aq)
END
 
DISCRETIZATION
xzones 100 1.0
END
 
